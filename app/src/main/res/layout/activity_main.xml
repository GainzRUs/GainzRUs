<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/appTitle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Gainz RUs"
        android:textColor="#3944bc"
        android:textSize="32sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appTitle_text_view"
        android:layout_centerInParent="true"
        android:layout_marginTop="128dp"
        android:ems="12"
        android:gravity="center"
        android:text="Will not display when run."
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/workoutType_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_text_view"
        android:layout_centerInParent="true"
        android:ems="12"
        android:gravity="center"
        android:text="Will not display when run."
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonNavigate"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_above="@+id/pastWorkouts_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:onClick="onAddExerciseClick"
        android:rotationY="-4"
        android:text="Log New Workout"
        android:backgroundTint="#3944bc"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/pastWorkouts_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:backgroundTint="#fff"
        android:onClick="onClickViewWorkout"
        android:text="View workout history"
        android:rotationY="4"
        android:textColor="#3944bc"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/button_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_homepage_settings"
        android:contentDescription="Settings"
        android:onClick="onClickSettings"/>

    <ImageView
        android:id="@+id/button_user_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_homepage_user"
        android:contentDescription="SettingsSetup"
        android:onClick="onClickSettings" />


</RelativeLayout>