<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#707d97">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/backgroundImage"
        android:src="@drawable/backgroundimage" />


    <ImageView
        android:id="@+id/pfp"
        android:contentDescription="@string/defaultProfileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:src="@drawable/profile"
        />

    <TextView
        android:id="@+id/userLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="@string/UserLabel" />

    <EditText
        android:id="@+id/userValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:textSize="22sp"
        android:inputType="text"
        android:autofillHints=""
        android:hint="@string/userEx" />

    <Button
        android:id="@+id/button_add_user_info"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClickAddUser"
        android:text="@string/DoneButton" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:background="#3944bc"
        android:contentDescription="@string/SubmitProfName" />

    <!--
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textColor="#6487AA"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/app_name"
        />
    -->

    <TextView
        android:id="@+id/hLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="@string/HeightLabel" />

    <TextView
        android:id="@+id/centerHold"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        />

    <EditText
        android:id="@+id/heightFeetValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:textSize="22sp"
        android:layout_toStartOf="@id/centerHold"
        android:autofillHints=""
        android:hint="@string/FeetLabel"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/heightInchValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/centerHold"
        android:layout_marginTop="410dp"
        android:textSize="22sp"
        android:hint="@string/InchLabel"
        android:autofillHints=""
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/wLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="470dp"
        android:layout_centerHorizontal="true"
        android:text="@string/WeightLabel" />

    <EditText
        android:id="@+id/weightValue"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="500dp"
        android:hint="@string/lbsLabel"
        android:autofillHints=""
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/bmiLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="630dp"
        android:layout_centerHorizontal="true"
        android:text="@string/BMILabel" />

    <TextView
        android:id="@+id/bmiValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="670dp"
        android:layout_centerHorizontal="true"
        android:text=""
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/homeicon2"
        android:onClick="onClickHomePage"
        android:contentDescription="@string/BackButtonDesc"
        />


    <Spinner
        android:id="@+id/spinner_menu"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="659dp"
        android:background="@drawable/spinner_drawable"
        android:spinnerMode="dropdown" />


</RelativeLayout>

